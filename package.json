{
  "name": "ng-universal-skeleton",
  "description": "Skeleton for apps based on Angular v4+ with universal (ssr) support",
  "version": "1.0.0-alpha.1",
  "license": "SEE LICENSE IN LICENSE.txt",
  "private": true,
  "homepage": "https://github.com/yasselavila/ng-universal-skeleton",
  "author": {
    "name": "Yassel Avila Gil",
    "url": "http://yasselavila.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yasselavila/ng-universal-skeleton.git"
  },
  "scripts": {
    "start": "npm run serve",
    "ng": "ng",
    "serve": "ng serve --port 4200 --proxy-config proxy.conf.json",
    "serve:aot": "ng serve --port 4200 --proxy-config proxy.conf.json --aot",
    "build:client:step1": "ng build --prod --aot --build-optimizer",
    "build:client": "run-s build:client:step1",
    "build:server:step1": "ng build --prod --aot --build-optimizer --app server --output-hashing=none",
    "build:server:step2": "tsc -p tsconfig.app-server.json",
    "build:server:step3": "cpx package.json dist/server/",
    "build:server": "run-s build:server:step1 build:server:step2 build:server:step3",
    "build": "run-s build:client build:server",
    "test": "ng test --code-coverage true",
    "lint": "ng lint",
    "e2e": "ng e2e --webdriver-update false",
    "dist:serve": "http-server dist/client -s -o -p 8181",
    "universal:serve": "node dist/server/server.js",
    "universal": "run-s build:client build:server universal:serve"
  },
  "dependencies": {
    "@angular/animations": "^4.2.4",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/platform-server": "^4.2.4",
    "@angular/router": "^4.2.4",
    "core-js": "^2.4.1",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.14",
    "ts-helpers": "^1.1.2",
    "ie-shim": "^0.1.0",
    "classlist.js": "^1.1.20150312",
    "web-animations-js": "^2.3.1",
    "intl": "^1.2.5",
    "express": "^4.15.4",
    "@nguniversal/express-engine": "^1.0.0-beta.3"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "@types/express": "^4.0.36",
    "codelyzer": "~3.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3",
    "http-server": "^0.9.0",
    "npm-run-all": "^4.1.1",
    "cpx": "^1.5.0",
    "bootstrap": "4.0.0-beta"
  }
}
